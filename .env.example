# OpenAI API Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Chroma Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Qdrant Vector Database Configuration  
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Vector Store Configuration
CODEX_VECTOR_COLLECTION=codex_agent
CODEX_EMBED_MODEL=all-MiniLM-L6-v2  # requires pip install sentence-transformers
CODEX_VECTOR_DIM=384
CODEX_EMBED_PROVIDER=hash

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Custom embeddings (for offline usage)
# USE_LOCAL_EMBEDDINGS=false
# LOCAL_EMBEDDINGS_MODEL=all-MiniLM-L6-v2

# GitHub MCP (set to personal access token with required scopes)
# GITHUB_PAT=ghp_your_token_here
